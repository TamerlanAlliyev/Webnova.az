# Netlify Headers Configuration
# Security & Performance Headers for Webnova

/*
  # Security Headers
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=()
  
  # Content Security Policy (CSP)
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' cdn.jsdelivr.net unpkg.com lottie.host; style-src 'self' 'unsafe-inline' fonts.googleapis.com cdnjs.cloudflare.com cdn.jsdelivr.net; font-src 'self' fonts.gstatic.com cdnjs.cloudflare.com cdn.jsdelivr.net data:; img-src 'self' data: https:; connect-src 'self' https://lottie.host https://fonts.googleapis.com https://fonts.gstatic.com; frame-ancestors 'self'
  
  # HSTS (HTTP Strict Transport Security)
  Strict-Transport-Security: max-age=31536000; includeSubDomains; preload
  
  # Cache Control (Non-critical resources)
  Cache-Control: public, max-age=31536000, immutable

# Cache for static assets (1 year)
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache for images (1 month)
/assets/images/*
  Cache-Control: public, max-age=2592000

# No cache for HTML
/*.html
  Cache-Control: no-cache, no-store, must-revalidate

# Cache for CSS (1 month)
/assets/styles/*
  Cache-Control: public, max-age=2592000

# Cache for JS (1 month)
/assets/scripts/*
  Cache-Control: public, max-age=2592000

# Fonts cache (1 year)
/assets/fonts/*
  Cache-Control: public, max-age=31536000, immutable

